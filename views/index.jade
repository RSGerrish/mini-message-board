extends layout

block content
  h1= title
  p Welcome to #{title}

  .button-container
  a(
    href= `http://localhost:${process.env.PORT || 3000}/new`
  )
    input(
      type='button'
      class='btn'
      value='Add a new message'
      name='btnAdd'      
    )

  each message in messages
    section.message-card
      h2= message.text
      p.description=message.description
      footer
        p.username= message.user
        p.date= message.added